<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.parkingBooking.ParkingBookingActivity">

    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toStartOf="@+id/activity_parking_booking_btn_date_button" />

    <Space
        android:id="@+id/space2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_parking_booking_btn_date_button" />

    <TextView
        android:id="@+id/activity_parking_booking_txt_parking_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Normal parking name"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_parking_booking_txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Date"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/activity_parking_booking_btn_date_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_parking_booking_txt_parking_name" />

    <Button
        android:id="@+id/activity_parking_booking_btn_date_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dim_button_right_margin"
        android:text="choose date"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_parking_booking_txt_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_parking_booking_txt_date" />

    <TextView
        android:id="@+id/activity_parking_booking_txt_starting_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="start time"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/activity_parking_booking_btn_date_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_parking_booking_txt_date" />

    <Button
        android:id="@+id/activity_parking_booking_btn_starting_time_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dim_button_right_margin"
        android:text="start time"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_parking_booking_txt_starting_time"
        app:layout_constraintEnd_toStartOf="@+id/space2"
        app:layout_constraintStart_toEndOf="@+id/space"
        app:layout_constraintTop_toTopOf="@+id/activity_parking_booking_txt_starting_time" />

    <TextView
        android:id="@+id/activity_parking_booking_txt_ending_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="start time"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/activity_parking_booking_btn_date_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_parking_booking_txt_starting_time" />

    <Button
        android:id="@+id/activity_parking_booking_btn_ending_time_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dim_button_right_margin"
        android:text="End time"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_parking_booking_txt_ending_time"
        app:layout_constraintEnd_toStartOf="@+id/space2"
        app:layout_constraintStart_toEndOf="@+id/space"
        app:layout_constraintTop_toTopOf="@+id/activity_parking_booking_txt_ending_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TODO: Add Payment Details"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_parking_booking_txt_ending_time" />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="BOOK"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/space"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>