<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/booking_details_fragment_cl_main_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.views.parking.slots.bookingDetails.BookingDetailsFragment">

    <ImageView
        android:id="@+id/booking_details_fragment_iv_lot_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/parking_lot_photo"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/booking_details_fragment_cv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/booking_details_fragment_iv_lot_photo">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/booking_details_fragment_txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:drawablePadding="10dp"
                android:textAppearance="?attr/textAppearanceHeadline6"
                app:drawableStartCompat="@drawable/ic_pending_booking"
                app:layout_constraintStart_toStartOf="@+id/booking_details_fragment_txt_parking_name"
                app:layout_constraintTop_toBottomOf="@+id/booking_details_fragment_txt_parking_name" />

            <TextView
                android:id="@+id/booking_details_fragment_txt_parking_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:textAppearance="?attr/textAppearanceHeadline6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/booking_details_fragment_txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:drawablePadding="10dp"
                android:textAppearance="?attr/textAppearanceBody1"
                app:drawableStartCompat="@drawable/ic_calendar"
                app:layout_constraintBottom_toBottomOf="@+id/booking_details_fragment_txt_start_time"
                app:layout_constraintStart_toEndOf="@+id/booking_details_fragment_txt_start_time"
                app:layout_constraintTop_toTopOf="@+id/booking_details_fragment_txt_start_time" />

            <TextView
                android:id="@+id/booking_details_fragment_txt_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:drawablePadding="10dp"
                android:textAppearance="?attr/textAppearanceBody1"
                app:drawableStartCompat="@drawable/ic_time"
                app:layout_constraintStart_toStartOf="@+id/booking_details_fragment_txt_status"
                app:layout_constraintTop_toBottomOf="@+id/booking_details_fragment_txt_status" />

            <TextView
                android:id="@+id/booking_details_fragment_txt_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:drawablePadding="10dp"

                android:textAppearance="?attr/textAppearanceBody1"
                app:drawableStartCompat="@drawable/ic_book_end_time"
                app:layout_constraintBottom_toBottomOf="@+id/booking_details_fragment_txt_offer"
                app:layout_constraintEnd_toEndOf="@+id/booking_details_fragment_txt_start_time"
                app:layout_constraintStart_toStartOf="@+id/booking_details_fragment_txt_start_time"
                app:layout_constraintTop_toBottomOf="@+id/booking_details_fragment_txt_start_time" />

            <TextView
                android:id="@+id/booking_details_fragment_txt_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp"
                android:drawablePadding="10dp"
                android:textAppearance="?attr/textAppearanceBody1"
                app:drawableStartCompat="@drawable/ic_offer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/booking_details_fragment_txt_date"
                app:layout_constraintStart_toStartOf="@+id/booking_details_fragment_txt_date"
                app:layout_constraintTop_toBottomOf="@+id/booking_details_fragment_txt_start_time" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/booking_details_fragment_fab_directions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/directions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="30dp"
        app:srcCompat="@drawable/ic_directions"
        app:tint="@color/purple_700" />

    <Button
        android:id="@+id/booking_details_fragment_btn_qr_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/view_qr_code"
        app:layout_constraintEnd_toEndOf="@+id/booking_details_fragment_cv"
        app:layout_constraintStart_toStartOf="@+id/booking_details_fragment_cv"
        app:layout_constraintTop_toBottomOf="@+id/booking_details_fragment_cv" />

</androidx.constraintlayout.widget.ConstraintLayout>